<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ReservationCRUDController">

    <VBox spacing="10">
        <Label text="Reservations:" />
        <TableView fx:id="tableViewReservations">
            <columns>
                <TableColumn fx:id="tableColumnId" text="Id">
                    <cellValueFactory>
                        <PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnMovieID" text="Movie ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="movieId" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnClientID" text="Client ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="idClient" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnDate" text="Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnTime" text="Time">
                    <cellValueFactory>
                        <PropertyValueFactory property="time" />
                    </cellValueFactory>
                </TableColumn>

            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
        <TextField fx:id="txtReservationID" promptText="ID" />
        <TextField fx:id="txtReservationMovieId" promptText="movie Id" />
        <TextField fx:id="txtReservationClientId" promptText="client Id" />
        <TextField fx:id="txtReservationDate" promptText="date" />
        <TextField fx:id="txtReservationTime" promptText="time" />


        <HBox alignment="center" spacing="40">
            <Button fx:id="btnAddReservation" onAction="#btnAddReservationClick" text="Add or update reservation" />
            <Button fx:id="btnDeleteReservation" onAction="#btnDeleteReservationClick" text="Delete reservation" />
        </HBox>

    </VBox>

</HBox>
