<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="center" fillHeight="false" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ReservationCRUDController">

    <VBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="599.0" prefWidth="700.0" spacing="10">
        <Label text="Reservations:" />
        <TableView fx:id="tableViewReservations" prefHeight="287.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="tableColumnId" prefWidth="117.0" text="Id">
                    <cellValueFactory>
                        <PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnMovieID" prefWidth="129.0" text="Movie ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="movieId" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnClientID" prefWidth="150.0" text="Client ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="idClient" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnDate" prefWidth="169.0" text="Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnTime" prefWidth="110.0" text="Time">
                    <cellValueFactory>
                        <PropertyValueFactory property="time" />
                    </cellValueFactory>
                </TableColumn>

            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
        <TextField fx:id="txtReservationID" promptText="ID" />
        <TextField fx:id="txtReservationMovieId" promptText="movie Id" />
        <TextField fx:id="txtReservationClientId" promptText="client Id" />
        <TextField fx:id="txtReservationDate" promptText="date" />
        <TextField fx:id="txtReservationTime" promptText="time" />


        <HBox alignment="center" spacing="40">
            <Button fx:id="btnAddReservation" onAction="#btnAddReservationClick" text="Add or update reservation" />
            <Button fx:id="btnDeleteReservation" onAction="#btnDeleteReservationClick" text="Delete reservation" />
        </HBox>
      <HBox.margin>
         <Insets right="50.0" />
      </HBox.margin>

    </VBox>

</HBox>
