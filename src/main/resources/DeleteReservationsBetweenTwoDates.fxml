<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<HBox alignment="center" fillHeight="false" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.DeteleReservationsBetweenTwoDatesController">

    <VBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="599.0" prefWidth="700.0" spacing="10">
        <Label text="Reservations:"/>
        <TableView fx:id="tableViewReservations" prefHeight="287.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="tableColumnId" prefWidth="117.0" text="Id">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnMovieID" prefWidth="129.0" text="Movie ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="movieId"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnClientID" prefWidth="150.0" text="Client ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="idClient"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnDate" prefWidth="169.0" text="Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnTime" prefWidth="110.0" text="Time">
                    <cellValueFactory>
                        <PropertyValueFactory property="time"/>
                    </cellValueFactory>
                </TableColumn>

            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

        </TableView>
        <Label text="From:"/>
        <TextField fx:id="txtReservationsTFFirstDate" promptText="dd.MM.yyyy"/>
        <Label text="To:"/>
        <TextField fx:id="txtReservationsTFSecondDate" promptText="dd.MM.yyyy"/>

        <HBox alignment="center" spacing="40">
            <Button fx:id="btnDeleteReservationsBetweenTwoDates" onAction="#btnDeleteReservationsBetweenTwoDatesClick"
                    text="Delete reservations"/>
        </HBox>
        <HBox.margin>
            <Insets right="50.0"/>
        </HBox.margin>

    </VBox>

</HBox>